{% extends 'base.html.twig' %}

{% block title %}GroupShare index{% endblock %}

{% block body %}
    <h1>GroupShare index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group_share in group_shares %}
            <tr>
                <td>{{ group_share.id }}</td>
                <td>{{ group_share.name }}</td>
                <td>{{ group_share.description }}</td>
                <td>{{ group_share.icon }}</td>
                <td>
                    <a href="{{ path('group_share_show', {'id': group_share.id}) }}">show</a>
                    <a href="{{ path('group_share_edit', {'id': group_share.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('group_share_new') }}">Create new</a>
{% endblock %}
