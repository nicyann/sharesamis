{% extends 'base.html.twig' %}

{% block title %}Borrow{% endblock %}

{% block body %}
    <h1>Borrow</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ borrow.id }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ borrow.dateStart ? borrow.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ borrow.dateEnd ? borrow.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Returned</th>
                <td>{{ borrow.returned ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('borrow_index') }}">back to list</a>

    <a href="{{ path('borrow_edit', {'id': borrow.id}) }}">edit</a>

    {{ include('borrow/_delete_form.html.twig') }}
{% endblock %}
