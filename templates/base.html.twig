<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link href="https://fonts.googleapis.com/css?family=Cookie|Courgette|Dancing+Script|Great+Vibes|Satisfy"
              rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Lato|Roboto+Slab" rel="stylesheet">
    {% endblock %}
</head>
<body>
<div class="container-fluid p-0">
    <nav class="navbar navbar-expand-lg navbar-light custom-nav">

        <a class="navbar-brand" href="{{ path('index') }}">
            <div class="logo">
                <img class="image-logo" src="{{ asset('build/images/logo_sharesamis-final.png') }}">
            </div>
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            {% block navbarLeft %}
                <ul class="navbar-nav ">
                    <li class="nav-item active">
                        <a class="nav-link color-menu" href="{{ path('index') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link color-menu {% if current_menu is defined and current_menu == 'groups' %}active{% endif %}"
                           href="{{ path('group_share_index') }}">Les groupes</a>
                    </li>
                    <li class="nav-item dropdown show">
                        <a href="#" class="nav-link dropdown-toggle color-menu" data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">Mes activités </a>
                        <div class="dropdown-menu bg-transparent" aria-labelledby="navbarDropdown ">
                            <a class="dropdown-item color-menu " href="{{ path('activity_borrow') }}">Prêts et
                                emprunts</a>
                            <a class="dropdown-item color-menu " href="{{ path('activity_article') }}">Mes objets</a>
                        </div>

                    </li>

                </ul>
            {% endblock %}
        </div>
        {% block navbarRight %}
        <div class="d-flex">
            <div class="user-connect">
                {% if app.user %}
                <img class="rounded-circle  foto-login"
                     src="{{ asset('uploads/images/users/' ~ app.user.filename ) }}">
                {% endif %}
            </div>
            <ul class="navbar-nav pt-2">
                {% if app.user %}
                    <li class="dropdown-item ">

                    </li>
                    <li class="nav-item dropdown ">
                        <a class="dropdown-item color-menu bg-transparent" href="{{ path('app_logout') }}">
                            <i class="fa fa-sign-in"></i>
                            Se déconnecter
                        </a>
                    </li>

                    <li>
                        <a class="dropdown-item color-menu bg-transparent" href="#">
                            <i class="fa fa-sign-in"></i>
                            mon compte
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item dropdown">
                        <a class="dropdown-item color-menu bg-transparent" href="{{ path('app_login') }}">
                            <i class="fa fa-sign-out color-menu"></i>
                            Se connecter
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="dropdown-item color-menu bg-transparent" href="{{ path('app_register') }}">
                            <i class="fa fa-sign-out"></i>
                            s'inscrire
                        </a>
                    </li>

                {% endif %}


            </ul>
            {% endblock %}
        </div>
    </nav>
</div>
<div class="container-fluid p-0">
{% block body %}{% endblock %}
</div>
{% block footer %}
    <div class="container-fluid d-flex row justify-content-around m-0 pt-3 main-footer">

        <img class="image-logo" src="{{ asset('build/images/logo_sharesamis-final.png') }}">

        <div class="footer-contact">
            <h5>Nous contacter</h5>
            <ul class="d-flex flex-column pl-0 contact-infos">
                <li>
                    <i class="fa fa-envelope"></i>
                    <a href="mailto:contact@free.fr">contact@free.fr</a>
                </li>
                <li>
                    <i class="fa fa-phone"></i>
                    <a href="tel:0612345678">0612345678</a>
                </li>
            </ul>
        </div>
        <div class="text-center footer-follow">
            <h6>Follow</h6>
            <div class="d-flex justify-content-around social-icones">
                <a href="">
                    <i class="fa fa-facebook-f"></i>
                </a>
                <a href="">
                    <i class="fa fa-twitter"></i>
                </a>
                <a href="">
                    <i class="fa fa-instagram"></i>
                </a>
            </div>
        </div>
        <div class="footer-nav">
            <ul>
                <li>
                    <a class="" href="{{ path('index') }}">Accueil</a>
                </li>
                <li>
                    <a class="" href="{{ path('group_share_index') }}">Les groupes
                    </a>
                </li>
                <li>
                    <a class=""href="{{ path('activity_borrow') }}">Prêts et emprunts
                    </a>
                </li>
                <li>
                    <a class="" href="{{ path('activity_article') }}">Mes objets</a>
                </li>
            </ul>
        </div>
        <div class="footer-cgu">
            <ul>
                <li>Mentions légales</li>
                <li>CGU</li>
            </ul>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}

{% endblock %}
</body>
</html>
