{% extends "base.html.twig." %}

{% block title 'Les groupes' %}

{% block body %}
    <div class="container mt-4 main-cadre">
        <h1>Les Groupes sur SharesAmis</h1>
        <p>les principaux groupe avec leurs membres!</p>
        <div class="row p-row">
            <div class="container   col-4 ">
                <div class="cadre">
                    <div class="container">
                <h3>
                    Liste des groupes
                </h3>
                    <table class="table table-condensed active">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Contact</th>
                        </tr>
                        </thead>
                        <tbody>
                    {% for groupshare in groupshares %}
                        <tr>

                            <td><a href="{{ path('group_share_show', { 'id': groupshare.id }) }}">{{ groupshare.name }}</a></td>
                            <td>{{ groupshare.description}}</td>
                            <td>{{ groupshare.user.firstname}}</td>

                        </tr>
                    {% endfor %}
                        </tbody>

                    </table>
                    </div>
                </div>
            </div>



            <div class="col-8">
                <div>
                    {% block content %}


                    {% endblock %}
                </div>



            </div>


        </div>

    </div>


{% endblock %}